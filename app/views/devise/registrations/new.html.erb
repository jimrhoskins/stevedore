<h2 class="page-header">Sign up</h2>

<%= form_for(resource, 
             :as => resource_name,
             :url => registration_path(resource_name), 
             html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <%= hidden_field_tag :invite_code, params[:invite_code] %>

  <div class="form-group">
    <%= f.label :username, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Password again", class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, placeholder: "Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-9 col-sm-offset-3">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
